{
  "name": "@slack_clone/root",
  "version": "1.0.0",
  "repository": "https://github.com/chchgyu/slack_clone",
  "author": "여찬규 <wry5533@gmail.com>",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "libs/*"
    ],
    "nohoist": [
      "**/@emotion/*"
    ]
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "scripts": {
    "dev:app": "yarn lerna run --scope @slack_clone/app_client dev",
    "dev:api": "yarn lerna run --scope @slack_clone/server_api start:dev",
    "build:app": "yarn lerna run --scope @slack_clone/app_client build",
    "build:api": "yarn lerna run --scope @slack_clone/server_api build",
    "prepare": "husky install",
    "commit": "yarn git-cz",
    "clean": "yarn clean:dist && yarn clean:modules",
    "clean:dist": "bash ./scripts/clean-dist.sh",
    "clean:modules": "bash ./scripts/clean-modules.sh",
    "update": "yarn upgrade && yarn syncyarnlock -s -k"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "commitizen": "^4.2.6",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.2",
    "lerna": "^5.6.2",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "syncyarnlock": "^1.0.19"
  }
}
